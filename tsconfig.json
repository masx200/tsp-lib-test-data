{
    "compilerOptions": {
        "declaration": false,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "ES2021"
        ],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "vite.config.ts",
        "src",
        "test",
        "bin",
        "__tests__"
    ]
}